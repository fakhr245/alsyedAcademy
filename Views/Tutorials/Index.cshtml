@model IEnumerable<alsyedAcademy.Models.Tutorial>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="probootstrap-section probootstrap-section-colored">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-left section-heading probootstrap-animate mb0">
                <h1 class="mb0">TOPICS</h1>
            </div>
        </div>
    </div>
</section>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>       
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           <a href="tutorials/details/@item.id">@item.Title</a>
        </td>       
        <td>
            <a href="tutorials/details/@item.id">@item.description</a>
        </td>       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |           
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
