@model IEnumerable<alsyedAcademy.Models.NewsVMTwo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tags)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.photo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tags)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>


<section class="probootstrap-section">
    <div class="container">

        <div class="row">    
            @foreach (var item in Model)
            {
            <div class="col-md-4 col-sm-6 col-xs-6 col-xxs-12 probootstrap-animate">
                <a href="#" class="probootstrap-featured-news-box">
                    <figure class="probootstrap-media"><img src="../images/newsthumbs/@item.photo" alt="@item.description" class="img-responsive"></figure>
                    <div class="probootstrap-text">
                        <h3>@item.title</h3>
                        <p>@item.description</p>
                        <span class="probootstrap-date"><i class="icon-calendar"></i>@item.dated</span>
                        <span class="probootstrap-location"><i class="icon-user2"></i>By Admin</span>
                    </div>
                </a>
            </div>    
            }
            <div class="clearfix visible-sm-block visible-xs-block"></div>
        </div>
    </div>
</section>