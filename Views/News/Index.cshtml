@model IEnumerable<alsyedAcademy.Models.NewsVMTwo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="probootstrap-section probootstrap-section-colored">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-left section-heading probootstrap-animate mb0">
                <h1 class="mb0">NEWS</h1>
            </div>
        </div>
    </div>
</section>@if (User.IsInRole("admin") == true)
{
<p>


    @Html.ActionLink("Create New", "Create");

</p>}
<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>       
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>      
   
@if (User.IsInRole("admin") == true)
{
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.id });
        
        </td>
}
else
{
    <td>
        |@Html.ActionLink("Details", "Details", new { id = item.id })
    </td>
}
    </tr>
}

</table>


<section class="probootstrap-section">
    <div class="container">

        <div class="row">    
            @foreach (var item in Model)
            {
            <div class="col-md-4 col-sm-6 col-xs-6 col-xxs-12 probootstrap-animate">
                <a href="/News/Details/@item.id" class="probootstrap-featured-news-box">
                    <figure class="probootstrap-media"><img src="../images/newsthumbs/@item.photo" alt="@item.description" class="img-responsive"></figure>
                    <div class="probootstrap-text">
                        <h3>@item.title</h3>
                        <p>@item.description</p>
                        <span class="probootstrap-date"><i class="icon-calendar"></i>@item.dated</span>
                        <span class="probootstrap-location"><i class="icon-user2"></i>By Admin</span>
                    </div>
                </a>
            </div>    
            }
            <div class="clearfix visible-sm-block visible-xs-block"></div>
        </div>
    </div>
</section>